<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.unalfaruk.catchthekenny.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="370dp"
        android:layout_height="403dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="122dp"
            android:layout_height="126dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

    </GridLayout>

    <Button
        android:id="@+id/btnDuraklat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:onClick="duraklatDevamEt"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Duraklat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txtSayac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Zaman: 30"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtPuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Puan: 0"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnYeniden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:onClick="yenidenBaslat"
        android:text="Yeniden"
        android:visibility="invisible"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtPuan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>